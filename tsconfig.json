{
  "compilerOptions": {
    "lib": ["es2021", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": true
  },
  "include": ["client/**/*.js"]
}
