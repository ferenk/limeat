{
  "compilerOptions": {
    "lib": ["es2021", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "include": ["client/**/*.js"]
}
