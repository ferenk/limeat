{
    "env": {
        "browser": true,
        "es2021": true,
        "eqeqeq": ["error", "always", {"null": "ignore"}]
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "import/no-unresolved": 2,
        "import/named": 2,
        "import/no-unused-modules": 1,
        "import/no-cycle": 1,
        "import/no-relative-packages": 1
    },
    "globals": {
        "MobileDetect": true,
        "moment": true
    },
    "lintTask": {
        "enable": true
    }

	/*"globals": {
        "require": false,
		"$": false,
		"jQuery": false,
		"chrome": false,
		"window": false,
		"document": false,
		"console": false,
		"alert": false,
		"confirm": false,
		"setTimeout": false,
		"clearTimeout": false,
		"sjcl": false,
        "html2canvas": false,
		"WorkerTimer": false,
		"ClipboardItem": false,
		"Buffer": false,
		"bgPage": true
	},
    "ignorePatterns": [ "appMain.js", "json_remove_fields.js", "Gruntfile.js" ]*/
}
